<div class='recipes'>
  {{#each recipes}}
    <div class='card'>
      <div class='card-header'>
        <h2>
          <a href='/post/{{id}}'>{{recipe_name}}</a>
        </h2>
        <p>Created by
          {{this.User.username}}
          on
          {{!-- {{format_date date_created}} --}}
        </p>
      </div>
      <div class='card-body'>
        <p>
          {{recipe_content}}
        </p>
      </div>
    </div>
  {{/each}}
</div>